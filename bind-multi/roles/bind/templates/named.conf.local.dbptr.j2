$TTL    604800
@       IN      SOA    {{ primary['dom'] }}. admin.{{ primary['dom'] }}. (
                              3         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
; name servers
      IN      NS      ns1.{{ primary['dom'] }}.
      IN      NS      ns2.{{ primary['dom'] }}.

; PTR Records
{% for x in ptr_records %}
{{x.ptr}}  IN    PTR {{x.host}}.{{x.domain}}.    
{% endfor %}
